set nocompatible

set expandtab
set smarttab
set shiftwidth=4
set tabstop=4
set autoindent


set backspace=2

set ignorecase
set smartcase

set hlsearch 
set showmatch

set ruler
set autoread

set encoding=utf8

set nowb
set noswapfile

syntax on
filetype indent on
filetype plugin on
set number
set nobackup

colorscheme desert

